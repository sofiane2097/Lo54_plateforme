<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/LO54</property>
    <property name="hibernate.connection.username">LO54</property>
    <property name="hibernate.connection.password">LO54</property>
    <property name="current_session_context_class">thread</property>
    <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>
    <property name="hbm2ddl.auto">create-drop</property>
    
    <mapping class="fr.utbm.entities.Client"/>
    <mapping class="fr.utbm.entities.Course"/>
    <mapping class="fr.utbm.entities.Location"/>
    <mapping class="fr.utbm.entities.CourseSession"/>


  </session-factory>
</hibernate-configuration>
